//this is for XFBRO
<script>
//this script should fix the issue on preselect values
var reactwait = setInterval(function(){ 
    if(document.querySelectorAll(".one-time").length > 5 ){
        clearInterval(reactwait);
        console.log("---preselecting 50")
        document.querySelector("#level_standardexpanded10866").click()
    }
}, 100);
</script>


//this is for PAZRM
<script>
//this script should fix the issue on preselect monthly values
